generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


// ============================================
// ENUMS
// ============================================

enum TaskStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  
  @@map("task_status")
}

enum TaskLevel {
  LOW
  MEDIUM
  HIGH
  
  @@map("task_level")
}

// ============================================
// MODELS
// ============================================

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  tasks     Task[]
  categories Category[]
  
  @@map("users")
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(NOT_STARTED)
  level       TaskLevel  @default(LOW)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  userId      String?
  user        User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  @@map("tasks")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]
  
  @@map("categories")
}